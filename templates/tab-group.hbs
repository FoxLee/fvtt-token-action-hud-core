{{~#if (ne selected false)~}}
<div class="tah-tab-group" id="tah-group-{{nestId}}" data-nest-id="{{nestId}}" data-has-actions="{{~#if (true hasActions)~}}true{{~else~}}false{{~/if~}}" data-level="{{level}}" data-type="{{type}}" data-show-title="{{settings.showTitle}}">
    <button class="tah-group-button" value="{{id}}">
        {{~#if settings.image~}}<img class="tah-button-image" src="{{settings.image}}" {{~#if tooltip~}} data-tooltip="{{tooltip}}"{{~/if~}}>{{~/if~}}
        <span class="tah-button-content">
            {{~#if settings.showTitle~}}<div class="tah-button-text">{{cap name}}</div>{{~/if~}}
            <i class="fa fa-pen-to-square" aria-hidden="true"></i>
            {{~#if info1.text~}}
            <div class="tah-info1{{~#if info1.class}} {{info1.class}}{{~/if~}}" data-tooltip="{{~#if info1.title}}{{info1.title}}{{~else~}}{{info1.text}}{{~/if}}">{{info1.text}}</div>
            {{~/if~}}
            {{~#if info2.text~}}
            <div class="tah-info2{{~#if info2.class}} {{info2.class}}{{~/if~}}" data-tooltip="{{~#if info2.title}}{{info2.title}}{{~else~}}{{info2.text}}{{~/if}}">{{info2.text}}</div>
            {{~/if~}}
            {{~#if info3.text~}}
            <div class="tah-info3{{~#if info3.class}} {{info3.class}}{{~/if~}}" data-tooltip="{{~#if info3.title}}{{info3.title}}{{~else~}}{{info3.text}}{{~/if}}">{{info3.text}}</div>
            {{~/if~}}
        </span>
    </button>
    <div class="tah-groups-container">
        <div class="tah-groups">
            {{~#if (true hasActions)~}}
            <div class="tah-actions{{~#if actionsClass}} {{actionsClass}}{{~/if~}}">
            {{#each actions}}
                {{>"modules/token-action-hud-core/templates/action.hbs"}}
            {{/each}}
            </div>
            {{~/if~}}
            {{~#if (true groups.lists.length)~}}
            <div class="tah-list-groups">
                {{#each groups.lists}}
                    {{>"modules/token-action-hud-core/templates/list-group.hbs" categoryId=../id}}
                {{/each}}
            </div>
            {{~/if~}}
            {{~#if (true groups.tabs.length)~}}
            <div class="tah-tab-groups">
                {{#each groups.tabs}}
                    {{>"modules/token-action-hud-core/templates/tab-group.hbs" categoryId=../id}}
                {{/each}}
            </div>
            {{~/if~}}
        </div>
    </div>
</div>
{{~/if~}}